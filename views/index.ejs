<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOMEPAGE</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>

<% if(user) { %>
    <body>
        <div class="navbar">
            <a href="/"><img src="/images/logo.jpg" alt="logo"></a>
            <h3>THE INFINITE DEN</h3>
            <span>
                <a href="/membership">GET MEMBERSHIP</a>
                <a href="/create">CREATE MESSAGE</a>
                <a href="/logout">LOGOUT</a>
            </span>
        </div>
        <div id="displayBox">
            <% messages.forEach((message)=>{ %>
                <div class="message">
                    <h3>TITLE: </h3>
                    <p>
                        <%= message.title %>
                    </p>
                    <h3>Message</h3>
                    <p>
                        <%= message.message %>
                    </p>
                </div>
                <% }) %>
        </div>
    </body>

    <% } else if(member){%>
        <body>
            <div class="navbar">
                <a href="/"><img src="/images/logo.jpg" alt="logo"></a>
                <h3>THE INFINITE DEN</h3>
                <span>
                    <a href="/create">CREATE MESSAGE</a>
                    <a href="/logout">LOGOUT</a>
                </span>
            </div>
            <div id="displayBox">
                <% messages.forEach((message)=>{ %>
                    <div class="message">
                        <h3>Author: </h3>
                        <p>
                            <%= message.username %>
                        </p>
                        <h3>DATE: </h3>
                        <p>
                            <%= message.date %>
                        </p>

                        <h3>TITLE: </h3>
                        <p>
                            <%= message.title %>
                        </p>
                        <h3>MESSAGE: </h3>
                        <p>
                            <%= message.message %>
                        </p>

                    </div>
                    <% }) %>
            </div>
        </body>

        <% } else if(admin){%>
            <body>
                <div class="navbar">
                    <a href="/"><img src="/images/logo.jpg" alt="logo"></a>
                    <h3>THE INFINITE DEN</h3>
                    <span>
                        <a href="/create">CREATE MESSAGE</a>
                        <a href="/logout">LOGOUT</a>
                    </span>
                </div>
                <div id="displayBox">
                    <% messages.forEach((message)=>{ %>
                        <div class="message">
                            <form action="/delete/<%= message._id %>" method="POST">
                                <h3>Author: </h3>
                                <p>
                                    <%= message.username %>
                                </p>
                                <h3>DATE: </h3>
                                <p>
                                    <%= message.date %>
                                </p>
                                <h3>TITLE: </h3>
                                <p>
                                    <%= message.title %>
                                </p>
                                <h3>MESSAGE: </h3>
                                <p>
                                    <%= message.message %>
                                </p>
                                <input type="submit" value="DELETE">
                            </form>
                        </div>
                        <% }) %>
                </div>
            </body>

            <% } else { %>
                <body>
                    <div class="navbar">
                        <a href="/"><img src="/images/logo.jpg" alt="logo"></a>
                        <h3>THE INFINITE DEN</h3>
                        <span>
                            <a href="/register">REGISTER</a>
                            <a href="/login">LOGIN</a>
                        </span>
                    </div>
                    <div id="displayBox">
                        <% messages.forEach((message)=>{ %>
                            <div class="message">
                                <h3>TITLE: </h3>
                                <p>
                                    <%= message.title %>
                                </p>
                                <h3>Message</h3>
                                <p>
                                    <%= message.message %>
                                </p>
                            </div>
                            <% }) %>
                    </div>
                </body>
                <% } %>
                    <footer>
                        <center>
                            <h3>
                                COPYRIGHT Â©KUNAL PURBIA
                            </h3>
                        </center>
                    </footer>

</html>